<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background"
    android:gravity="center"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circular_background"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile_image"
        app:layout_constraintBottom_toTopOf="@+id/user_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="204dp"
        android:text="Hello World!"
        android:textColor="#FFFCFC"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/logout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:background="@drawable/bordered_button_background"
        android:text="Logout"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/bordered_button_background"
        android:text="Reset Password"
        android:textSize="25dp"
        android:textColorLink="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:background="@drawable/bordered_button_background"
        android:text="Delete Account"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/reset_password_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/left_line"
        android:layout_width="1dp"
        android:layout_height="240dp"
        android:layout_marginBottom="80dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reset_password_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/logout_button"
        app:layout_constraintTop_toTopOf="@id/logout_button"
        app:layout_constraintVertical_bias="0.816" />

    <View
        android:id="@+id/right_line"
        android:layout_width="1.5dp"
        android:layout_height="240dp"
        android:layout_marginBottom="80dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reset_password_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/logout_button"
        app:layout_constraintTop_toTopOf="@id/logout_button"
        app:layout_constraintVertical_bias="0.816" />

    <View
        android:id="@+id/top_line"
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reset_password_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/logout_button"
        app:layout_constraintTop_toTopOf="@id/logout_button"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reset_password_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/logout_button"
        app:layout_constraintTop_toTopOf="@id/logout_button"
        app:layout_constraintVertical_bias="0.753" />

    <View
        android:id="@+id/logdel_line"
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reset_password_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/logout_button"
        app:layout_constraintTop_toTopOf="@id/logout_button"
        app:layout_constraintVertical_bias="0.25" />

    <View
        android:id="@+id/delres_line"
        android:layout_width="420dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reset_password_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/logout_button"
        app:layout_constraintTop_toTopOf="@id/logout_button"
        app:layout_constraintVertical_bias="0.496" />
</androidx.constraintlayout.widget.ConstraintLayout>
